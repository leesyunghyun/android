<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#33F2CB61" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvnotice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필을 입력해 주세요!"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:hint="이름"
                    android:maxLength="4" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 님"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/editAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:hint="나이"
                    android:inputType="number"
                    android:maxLength="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 세"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/editHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:hint="키"
                    android:inputType="number"
                    android:maxLength="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=" CM"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:hint="몸무게"
                    android:inputType="number"
                    android:maxLength="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=" Kg"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="자신의 직업을 선택해주세요!"
                    android:textSize="17dp" />

                <RadioGroup
                    android:id="@+id/rgJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/elmntStd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="초등" />

                    <RadioButton
                        android:id="@+id/mhStd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중/고등" />

                    <RadioButton
                        android:id="@+id/UnivStd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대학" />

                    <RadioButton
                        android:id="@+id/human"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일반" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="자신의 얼굴형을 골라주세요!"
                    android:textSize="17dp" />

                <RadioGroup
                    android:id="@+id/rghairType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/hairface1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="긴" />

                    <RadioButton
                        android:id="@+id/hairface2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="타원" />

                    <RadioButton
                        android:id="@+id/hairface3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사각" />

                    <RadioButton
                        android:id="@+id/hairface4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="둥근" />

                    <RadioButton
                        android:id="@+id/hairface5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다이아몬드" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="자신의 머리스타일을 선택해주세요"
                    android:textSize="17dp" />

                <RadioGroup
                    android:id="@+id/rghairStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/hairShort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="짧은(스포츠)" />

                    <RadioButton
                        android:id="@+id/hairMiddle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중간(평균)" />

                    <RadioButton
                        android:id="@+id/hairLong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="긴(묶음)" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:text="자신의 피부 타입을 선택해주세요!"
                    android:textSize="17dp" />

                <RadioGroup
                    android:id="@+id/rgskinType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/skinRadio0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="일반" />

                    <RadioButton
                        android:id="@+id/skinRadio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="건성" />

                    <RadioButton
                        android:id="@+id/skinRadio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="민감" />

                    <RadioButton
                        android:id="@+id/skinRadio3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복합" />

                    <RadioButton
                        android:id="@+id/skinRadio4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지성" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutskinage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <EditText
                    android:id="@+id/editskinage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:hint="피부나이를 측정해주세요" />

                <Button
                    android:id="@+id/btnskinage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btnonoff"
                    android:text="측정" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnskintest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btnonoff"
                    android:text="피부타입\n테스트" />

                <Button
                    android:id="@+id/btnfaceselect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnonoff"
                    android:layout_marginRight="10dp"
                    android:text="얼굴형\n고르기" />

                <Button
                    android:id="@+id/btnImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnonoff"
                    android:text="사진" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnMake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btnonoff"
                    android:text="생성" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnonoff"
                    android:text="취소" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>